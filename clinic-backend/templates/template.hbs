<!DOCTYPE html>
<html>
<head>
    <title>Medical Prescription</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        .bulleted-list {
            list-style-type: disc;
            margin: 10px 0;
            padding-left: 20px;
        }
    </style>
</head>
<body>

    <h1>Medical Prescription</h1>

    <h2>Date</h2>
    <p>{{date}}</p>

    <h2>Chief Complaints and Clinical Findings</h2>
    <table>
        <thead>
            <tr>
                <th>Chief Complaints</th>
                <th>Clinical Findings</th>
            </tr>
        </thead>
        <tbody>
            {{#each complaints}}
            <tr>
                <td>{{chiefComplaints}}</td>
                <td>{{clinicalFindings}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <h2>Diagnosis</h2>
    <ul class="bulleted-list">
        {{#each diagnosis}}
        <li>{{this}}</li>
        {{/each}}
    </ul>

    <h2>Symptoms</h2>
    <ul class="bulleted-list">
        {{#each symptoms as |symptom|}}
        <li>{{symptom}}</li>
        {{/each}}
    </ul>

    <h2>Advice</h2>
    <ul class="bulleted-list">
        {{#each advice as |ad|}}
        <li>{{ad}}</li>
        {{/each}}
    </ul>

    <h2>Facility</h2>
    <ul class="bulleted-list">
        {{#each facility as |fac|}}
        <li>{{fac}}</li>
        {{/each}}
    </ul>

    <h2>Medicines</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Dosage</th>
                <th>Duration</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            {{#each medicines}}
            <tr>
                <td>{{name}}</td>
                <td>{{dosage}}</td>
                <td>{{duration}}</td>
                <td>{{quantity}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</body>
</html>
