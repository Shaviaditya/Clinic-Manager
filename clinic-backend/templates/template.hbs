<!DOCTYPE html>
<html>
<head>
    <title>Medical Prescription</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 10px;
            max-width: 800px;
            margin: auto;
            background-color: #f9f9f9;
        }
        h3, h5 {
            color: #2c3e50;
            margin-bottom: 4px;
        }
        p {
            font-size: 13px;
        }
        .flex-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin-bottom: 10px;
        }
        .flex-item {
            flex: 1 1 45%;
            box-sizing: border-box;
            padding: 10px;
            margin: 2px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .flex-item p {
            margin: 2px 0;
        }
        table {
            width: 90%;
            border-collapse: collapse;
            margin-top: 3px;
            margin-bottom: 5px;
            margin-left: auto;
            margin-right: auto;
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            font-size: 12px; /* Smaller font size for table content */
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 7px;
            text-align: left;
        }
        th {
            background-color: #2c3e50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .bulleted-list {
            list-style-type: disc;
            margin: 5px 0;
            padding-left: 10px;
        }

        .flex-list-item {
            margin: 2px 0;
            font-size: 12px; 
        }
    </style>
</head>
<body>

    <div style="margin-top: 100px;"></div> <!-- Added space for the header -->

    <h3>Medical Prescription</h3>

    <div class="flex-container">
        <div class="flex-item">
            <p><strong>Name:</strong> {{name}}</p>
            <p><strong>Age:</strong> {{age}}</p>
            <p><strong>Phone:</strong> {{phone}}</p>
        </div>
        <div class="flex-item">
            <p><strong>Height:</strong> {{height}}</p>
            <p><strong>Weight:</strong> {{weight}}</p>
            <p><strong>Blood Pressure:</strong> {{bloodPressure}}</p>
        </div>
    </div>

    <div class="flex-container">
        <div class="flex-item">
            <p><strong>Date:</strong> {{date}}</p>
        </div>
    </div>

    {{#if complaints.length}}
    <h5>Chief Complaints and Clinical Findings</h5>
    <table>
        <thead>
            <tr>
                <th>Chief Complaints</th>
                <th>Clinical Findings</th>
            </tr>
        </thead>
        <tbody>
            {{#each complaints}}
            <tr>
                <td>{{chiefComplaints}}</td>
                <td>{{clinicalFindings}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}

    {{#if diagnosis.length}}
    <h5>Diagnosis</h5>
    <div class="flex-list">
        {{#each diagnosis}}
        <div class="flex-list-item">
            <li>{{this}}</li>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if symptoms.length}}
    <h5>Symptoms</h5>
    <div class="flex-list">
        {{#each symptoms as |symptom|}}
        <div class="flex-list-item">
            <li>{{symptom}}</li>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if advice.length}}
    <h5>Advice</h5>
    <div class="flex-list">
        {{#each advice as |ad|}}
        <div class="flex-list-item">
            <li>{{ad}}</li>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if medicines.length}}
    <h5>Medicines</h5>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Dosage</th>
                <th>Duration</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            {{#each medicines}}
            <tr>
                <td>{{name}}</td>
                <td>{{dosage}}</td>
                <td>{{duration}}</td>
                <td>{{quantity}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}

    <div style="margin-bottom: 40px;"></div> <!-- Added space for the footer -->

</body>
</html>
